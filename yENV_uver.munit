   yUNIT_mincond  ("check stdin is empty");
   yUNIT_minval   ("check stdin"                        , yenv_ucheck_stdin ()              ,    0);
   yUNIT_mindnoc  ();

   yUNIT_mincond  ("load and check stdin is ready");
   yUNIT_minval   ("load stdin"                         , yenv_uload_stdin ("helloд")       ,    1);
   yUNIT_minval   ("check stdin"                        , yenv_ucheck_stdin ()              ,    1);
   yUNIT_mindnoc  ();

   yUNIT_mincond  ("purge stdin and verify it is empty");
   yUNIT_minval   ("... unload stdin"                   , yenv_upurge_stdin ()              ,    0);
   yUNIT_minval   ("check stdin"                        , yenv_ucheck_stdin ()              ,    0);
   yUNIT_mindnoc  ();

   yUNIT_mincond  ("close an open file");
   yUNIT_minval   ("close file"                         , yenv_uclose (&f)                  ,    1);
   yUNIT_minptr   ("... check pointer"                  , f                                 ,    0);
   yUNIT_minval   ("... unload stdin"                   , yenv_upurge_stdin ()              ,    0);
   yUNIT_mindnoc  ();

   yENV__unit_end    ();
   yUNIT_minprcs  ();
   return 0;
}

char
koios_code_uread   (char a_scrp, char a_list, char a_unit)
{
   char        s_file      [LEN_HUND]  = "/tmp/yenv_test.txt";
   FILE       *f           = NULL;
   char        x_recd      [LEN_RECD]  = "";
   short       x_total     =    0;
   short       x_accept    =    0;

   yUNIT_minscrpy ("yENV", "yENV_uver", "(UVER) verify micro version of file open/cloce");
   if (a_list == '!')    { yUNIT_minprcs (); return 0; }
   if (a_unit != 0 && a_scrp != a_unit)  return 0;
   if (a_list == 'y')                    return 0;
   yENV__unit_quiet  ();

   yUNIT_mincond  ("open a file for reading");
   system ("echo \"line one\"           >  /tmp/yenv_test.txt");
   system ("echo \"\"                   >> /tmp/yenv_test.txt");
   system ("echo \"line two\"           >> /tmp/yenv_test.txt");
   system ("echo \"\"                   >> /tmp/yenv_test.txt");
   system ("echo \"\"                   >> /tmp/yenv_test.txt");
   system ("echo \"line three\"         >> /tmp/yenv_test.txt");
   yUNIT_minval   ("... check lines"                    , yenv_ulines (s_file)     ,    6);
   yUNIT_minstr   ("... check line"                     , yenv_upeek  (s_file, YDLST_HEAD) , "line one"  );
   yUNIT_minstr   ("... check line"                     , yenv_upeek  (s_file, YDLST_NEXT) , ""          );
   yUNIT_minstr   ("... check line"                     , yenv_upeek  (s_file, YDLST_NEXT) , "line two"  );
   yUNIT_minstr   ("... check line"                     , yenv_upeek  (s_file, YDLST_NEXT) , ""          );
   yUNIT_minstr   ("... check line"                     , yenv_upeek  (s_file, YDLST_NEXT) , ""          );
   yUNIT_minstr   ("... check line"                     , yenv_upeek  (s_file, YDLST_NEXT) , "line three");
   yUNIT_minstr   ("... check line"                     , yenv_upeek  (s_file, YDLST_NEXT) , "(n/a)"     );
   yUNIT_mindnoc  ();

   yUNIT_mincond  ("open a file for reading");
   yUNIT_minval   ("open file"                          , yenv_uopen  (s_file, 'r', &f)     ,    1);
   yUNIT_minptr   ("... check pointer"                  , f                                 ,    1);
   yUNIT_mindnoc  ();

   yUNIT_mincond  ("read a line");
   yUNIT_minval   ("call read"                          , yenv_uread  (f, LEN_HUND, x_recd, &x_total, &x_accept)     ,    1);
   yUNIT_minstr   ("... check line"                     , x_recd   , "line one");
   yUNIT_minval   ("... check total lines"              , x_total  ,          1);
   yUNIT_minval   ("... check accepted"                 , x_accept ,          1);
   yUNIT_mindnoc  ();

   yUNIT_mincond  ("read a line");
   yUNIT_minval   ("call read"                          , yenv_uread  (f, LEN_HUND, x_recd, &x_total, &x_accept)     ,    1);
   yUNIT_minstr   ("... check line"                     , x_recd   , "line two");
   yUNIT_minval   ("... check total lines"              , x_total  ,          3);
   yUNIT_minval   ("... check accepted"                 , x_accept ,          2);
   yUNIT_mindnoc  ();

   yUNIT_mincond  ("read a line");
   yUNIT_minval   ("call read"                          , yenv_uread  (f, LEN_HUND, x_recd, &x_total, &x_accept)     ,    1);
   yUNIT_minstr   ("... check line"                     , x_recd   , "line three");
   yUNIT_minval   ("... check total lines"              , x_total  ,          6);
   yUNIT_minval   ("... check accepted"                 , x_accept ,          3);
   yUNIT_mindnoc  ();

   yUNIT_mincond  ("read a line (EOF)");
   yUNIT_minval   ("call read"                          , yenv_uread  (f, LEN_HUND, x_recd, &x_total, &x_accept)     ,    0);
   yUNIT_minstr   ("... check line"                     , x_recd   , ""        );
   yUNIT_minval   ("... check total lines"              , x_total  ,          6);
   yUNIT_minval   ("... check accepted"                 , x_accept ,          3);
   yUNIT_mindnoc  ();

   yUNIT_mincond  ("read a line (way past EOF)");
   yUNIT_minval   ("call read"                          , yenv_uread  (f, LEN_HUND, x_recd, &x_total, &x_accept)     , -999);
   yUNIT_minstr   ("... check line"                     , x_recd   , ""        );
   yUNIT_minval   ("... check total lines"              , x_total  ,          6);
   yUNIT_minval   ("... check accepted"                 , x_accept ,          3);
   yUNIT_mindnoc  ();

   yUNIT_mincond  ("close an open file");
   yUNIT_minval   ("close file"                         , yenv_uclose (&f)                  ,    1);
   yUNIT_minptr   ("... check pointer"                  , f                                 ,    0);
   yUNIT_mindnoc  ();

   yENV__unit_end    ();
   yUNIT_minprcs  ();
   return 0;
}

char
main                    (int a_argc, char *a_argv [])
{
   /*---(locals)-----------+-----+-----+-*/
   int         x_unit      =    0;
   int         n           =    0;
   char        x_list      =    0;
   /*---(arguments)----------------------*/
   printf ("## %s\n", P_ONELINE);
   printf ("## pre-yUNIT unit testing : %s\n", a_argv [0]);
   if (a_argc >= 2) {
      if (strcmp (a_argv [1], "--list") == 0)       x_list = 'y';
      else if (strcmp (a_argv [1], "--inst") == 0)  x_list = '!';
      else                                          x_unit = atoi (a_argv [1]);
   }
   if (x_unit  >  0 )         printf ("## selected single script (%2d)\n", x_unit);
   else                       printf ("## selected all scripts\n");
   if (x_list == 'y')         printf ("## list script(s) only\n");
   else if (x_list == '!')    printf ("## generate initial wave file\n");
   else                       printf ("## execute conditions and steps\n");
   printf ("\n");
   /*---(scripts)------------------------*/
   koios_uver_upeekier  (++n, x_list, x_unit);
   koios_uver_uindex    (++n, x_list, x_unit);
   koios_code_upeek     (++n, x_list, x_unit);
   koios_code_umixed    (++n, x_list, x_unit);
   koios_code_unormal   (++n, x_list, x_unit);
   koios_code_uopen     (++n, x_list, x_unit);
   koios_code_ustdin    (++n, x_list, x_unit);
   koios_code_uread     (++n, x_list, x_unit);
   /*---(wrapup)-------------------------*/
   yUNIT_mintinu    ();
   /*---(complete)-----------------------*/
   return 0;
}

