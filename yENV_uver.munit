char
koios_code_uopen   (char a_scrp, char a_list, char a_unit)
{
   char        s_file      [LEN_HUND]  = "/tmp/yenv_test.txt";
   FILE       *f           = NULL;

   yUNIT_minscrpy ("yENV", "yENV_uver", "(UVER) verify micro version of file open/cloce");
   if (a_list == '!')    { yUNIT_minprcs (); return 0; }
   if (a_unit != 0 && a_scrp != a_unit)  return 0;
   if (a_list == 'y')                    return 0;
   yENV__unit_quiet  ();

   yUNIT_mincond  ("open a file for writting");
   yUNIT_minval   ("open file"                          , yenv_uopen  (s_file, 'w', &f)     ,    1);
   yUNIT_minptr   ("... check pointer"                  , f                                 ,    1);
   yUNIT_mindnoc  ();

   yUNIT_mincond  ("attempt to double open");
   yUNIT_minval   ("open file"                          , yenv_uopen  (s_file, 'w', &f)     , -999);
   yUNIT_minptr   ("... check pointer"                  , f                                 ,    1);
   yUNIT_mindnoc  ();

   yUNIT_mincond  ("close an open file");
   yUNIT_minval   ("close file"                         , yenv_uclose (&f)                  ,    1);
   yUNIT_minptr   ("... check pointer"                  , f                                 ,    0);
   yUNIT_mindnoc  ();

   yUNIT_mincond  ("attempt to double close");
   yUNIT_minval   ("close file"                         , yenv_uclose (&f)                  , -999);
   yUNIT_minptr   ("... check pointer"                  , f                                 ,    0);
   yUNIT_mindnoc  ();

   yUNIT_mincond  ("attempt to open with nulls and empties name");
   yUNIT_minval   ("open file"                          , yenv_uopen  (NULL  , 'w', &f)     , -999);
   yUNIT_minptr   ("... check pointer"                  , f                                 ,    0);
   yUNIT_minval   ("open file"                          , yenv_uopen  (""    , 'w', &f)     , -999);
   yUNIT_minptr   ("... check pointer"                  , f                                 ,    0);
   yUNIT_minval   ("open file"                          , yenv_uopen  (""    , 'w', NULL)   , -999);
   yUNIT_minptr   ("... check pointer"                  , f                                 ,    0);
   yUNIT_mindnoc  ();

   yUNIT_mincond  ("open the file for writing, again");
   yUNIT_minval   ("open file"                          , yenv_uopen  (s_file, 'w', &f)     ,    1);
   yUNIT_minptr   ("... check pointer"                  , f                                 ,    1);
   yUNIT_mindnoc  ();

   yUNIT_mincond  ("attempt to close a null file");
   yUNIT_minval   ("close file"                         , yenv_uclose (NULL)                , -999);
   yUNIT_minptr   ("... check pointer"                  , f                                 ,    1);
   yUNIT_mindnoc  ();

   yUNIT_mincond  ("close an open file");
   yUNIT_minval   ("close file"                         , yenv_uclose (&f)                  ,    1);
   yUNIT_minptr   ("... check pointer"                  , f                                 ,    0);
   yUNIT_mindnoc  ();

   yUNIT_mincond  ("attempt to open will bad modes");
   yUNIT_minval   ("open file"                          , yenv_uopen  (s_file,  0 , NULL)   , -999);
   yUNIT_minptr   ("... check pointer"                  , f                                 ,    0);
   yUNIT_minval   ("open file"                          , yenv_uopen  (s_file, ' ', NULL)   , -999);
   yUNIT_minptr   ("... check pointer"                  , f                                 ,    0);
   yUNIT_minval   ("open file"                          , yenv_uopen  (s_file, 'и', NULL)   , -999);
   yUNIT_minptr   ("... check pointer"                  , f                                 ,    0);
   yUNIT_minval   ("open file"                          , yenv_uopen  (s_file, '2', NULL)   , -999);
   yUNIT_minptr   ("... check pointer"                  , f                                 ,    0);
   yUNIT_mindnoc  ();

   yUNIT_mincond  ("open the file for reading (since it now exists)");
   yUNIT_minval   ("open file"                          , yenv_uopen  (s_file, 'r', &f)     ,    1);
   yUNIT_minptr   ("... check pointer"                  , f                                 ,    1);
   yUNIT_mindnoc  ();

   yUNIT_mincond  ("close an open file");
   yUNIT_minval   ("close file"                         , yenv_uclose (&f)                  ,    1);
   yUNIT_minptr   ("... check pointer"                  , f                                 ,    0);
   yUNIT_mindnoc  ();

   yUNIT_mincond  ("attempt to open a non-existant file for reading");
   unlink (s_file);
   yUNIT_minval   ("open file"                          , yenv_uopen  (s_file, 'r', &f)     , -999);
   yUNIT_minptr   ("... check pointer"                  , f                                 ,    0);
   yUNIT_mindnoc  ();

   yENV__unit_end    ();
   yUNIT_minprcs  ();
   return 0;
}

